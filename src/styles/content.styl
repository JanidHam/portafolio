.content
  margin 66px 0 0 0
  
  &-social-media
  	background-color rgba(0, 0, 0, 0.72)
  	display flex
  	flex-flow row wrap
  	align-items center
  	height 270px
  	
  	.content-block-avatar
  		order 1
  		width 100%
  		display flex
  		justify-content center

	  	img
	  		border-radius 50%
	  		border 1px solid #fff
	  		cursor pointer
	  		margin-top 15px
	  		
	  .content-block-social-media
	  	order 3
	  	width 100%
	  	
	  	&-list
	  		width 100%
	  		display flex
		  	justify-content center
		  	margin-bottom 10px
	  		
	  		&-item
	  			display inline-block
	  			margin 3px 10px
	  			font-size 2rem
	  			
	  			a
	  				color #fff
	  				
	  .content-block-text
	  	order 2
	  	width 100%  

	  	h2
	  		color #fff
	  		text-align center
	  		font-size 1.2rem

  		p
  			color #fff
  			line-height 1.5rem
  			text-align center
  			font-size 1rem

    a
      color #fff
      text-decoration none
  			
  &-about-me
  	background-color #f2f3f7
  	height auto
  	
  	&-im
  		padding 10px
  		
  		h3
  			margin-bottom 10px
  			font-size 2rem
  		
  		p
  			font-size 1rem
  			line-height 1.5rem
  			text-align justify
     
  &-cv
    height auto
    
    h3
      margin-bottom 10px
      font-size 2rem
      text-align center
    
    p
      font-size 1rem
      line-height 1.5rem
      text-align justify
    
    div
      padding 10px
      
      h4
        margin-bottom 10px
        font-size 1.7rem
    
    &-experience
      p.estate
        color #c8c8c8
      
      h5
        color $title_job
        font-size 1.3rem
        font-weight 700
        margin-top 10px
        span.state
          color #c8c8c8
          font-size 1rem
          font-weight 500
      h6
        color $title_job
        font-size 1.2rem
        font-weight 600
        margin 5px 0
        
  &-courses
    height auto
    padding 0
    
    &-item
      padding 1em
      border-left 6px solid #dedede
      border-bottom 1px solid #dedede
      
      &-title
        font-family 'Monserrat'

      &:hover
        background-color #dedede

      &:nth-child(1)
        border-left-color green
      &:nth-child(2)
        border-left-color red
      &:nth-child(3)
        border-left-color blue
      &:nth-child(4)
        border-left-color orange

    h3
      margin-bottom 10px
      font-size 2rem
      text-align center
      
    h5
      color $title_job
      font-size 1.3rem
      text-align center


@media (min-width: 768px)
	.content
  	margin 80px 0 0 0
  	
  	&-social-media
  		height 350px
  		
      .content-block-avatar
        img
          width 160px
          height 160px
  		.content-block-text
		  	
		  	h2
		  		font-size 1.7rem
	  		p
	  			font-size 1.3rem
	  			margin-top .3rem
  
  .content
    &-about-me
      &-im
        width 820px
        margin 0 auto
        p
          font-size 1.1rem
        
  .content
    &-cv
      width 820px
      margin 0 auto
      h3
        margin-top 15px
      p
        font-size 1.1rem

  .content
    &-courses
      width 820px
      margin 0 auto
    